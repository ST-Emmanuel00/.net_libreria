@model IEnumerable<Libreria.Models.Libro>
@{
    //ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="row">
              <!-- Striped rows -->
              <div class="col-md-12 my-4">
                <h2 class="h4 mb-1">Libreria</h2>
                <p class="mb-4">Vista de los Libros existentes</p>
                <div class="card shadow">
                  <div class="card-body">
                    <div class="toolbar row mb-3">
                      <div class="col">

                        <form class="form-inline">
                          <div class="form-row">
                            <div class="form-group col-auto">
                              <label for="search" class="sr-only">Buscar</label>
                              <input type="text" class="form-control" id="search" value="" placeholder="Buscar">
                            </div>
                          </div>
                        </form>

                      </div>


                      <div class="col ml-auto">
                        <div class="dropdown float-right">
                          <a asp-controller="Libro" asp-action="CrearLibro"><button class="btn btn-primary float-right ml-3"
                              type="button"> Crear libro </button></a>


                          <button class="btn btn-secondary dropdown-toggle" type="button" id="actionMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i
                              class="fe fe-download fe-16"></i></button>
                          <div class="dropdown-menu" aria-labelledby="actionMenuButton">
                            <a class="dropdown-item" href="descargar_excel_espacios">Excel</a>
                          </div>
                                        
                        </div>
                      </div>
                    </div>


                    <!-- table -->
                    <table class="table table-bordered">
                      <thead>

                        <tr role="row">

                          <th>Item</th>
                          <th>titulo</th>
                          <th>Descripcion</th>
                          <th>Fecha lanzamiento</th>
                          <th>Autor</th>
                          <th>Precio</th>

                          <th>Actiones</th>
                        </tr>
                      </thead>

                        @{
                            if (Model.Count() == 0)
                            {
                                <h1>Todo esta mal hermano</h1>
                            }

                            else
                            {
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td> @item.id </td>
                                        <td> @item.titulo </td>
                                        <td> @item.descripcion </td>
                                        <td> @item.fechaLanzamiento </td>
                                        <td> @item.autor </td>
                                        <td> @item.precio </td>


                                        <td>

                                            <button class="btn btn-sm dropdown-toggle" type="button" id="actionMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"><i class = "fe fe-more-vertical fe-24"></i>
                                            </button>

                                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actionMenuButton">

                                                <button type="button" class="dropdown-item" data-toggle="modal" data-target="#eventModal"
                                                    onclick='editar_espacio(${JSON.stringify(espacio)})'>Editar libro</button>
                                                <a onclick="eliminar_espacio('${espacio._id}')" class="dropdown-item" href="#">Eliminar libro</a>

                                                </div>

                                            </td>

                                    </tr>

                                }
                            }




                        };

                      <tbody id="contenido_espacios">
                      </tbody>
                    </table>
                  </div>
                </div>
              </div> <!-- simple table -->
            </div> <!-- end section -->


@*            {{!-- Modal editar --}}*@


  <div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="varyModalLabel">Editar libro</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body p-4">


          <div class="form-group mb-3">
            <label for="example-password">Titulo</label>
            <input type="text" id="nombre_espacio" class="form-control" onchange="" required>
            <div id="FB_nombre_espacio"></div>
          </div>

          <div class="form-group mb-3">
            <label for="example-password">Descripcion</label>
            <input type="text" id="nombre_espacio" class="form-control" onchange="" required>
            <div id="FB_nombre_espacio"></div>
          </div>

          <div id="div_area" class="form-group mb-3">
            <label for="example-password">Fecha lanzamiento</label>
            <input type="number" id="area" class="form-control" onchange="" required>
            <div id="FB_area"></div>
          </div>

          <div id="div_capacidad" class="form-group mb-3">
            <label for="example-password">Autor</label>
            <input type="text" id="capacidad" class="form-control" onchange="" required>
            <div id="FB_capacidad"></div>
          </div>

          <div id="div_capacidad" class="form-group mb-3">
            <label for="example-password">Precio</label>
            <input type="number" id="capacidad" class="form-control" onchange="" required>
            <div id="FB_capacidad"></div>
          </div>

        </div>

        <div class="modal-footer d-flex justify-content-between">
          <button onclick="actualizar_espacio()" id="boton_actualizar" type="button" class="btn mb-2 btn-primary"><span
              class="fe mr-2"></span>Actualizar
            libro</button>
          <a asp-controller="Libro"><button id="regresar" type="button" class="btn mb-2 btn-light btn-block">
              <spana class="fe mr-2"></spana>Regresar
            </button></a>
        </div>

      </div>
    </div>
  </div>


