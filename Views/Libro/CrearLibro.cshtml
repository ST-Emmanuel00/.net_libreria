
@{
    ViewData["Title"] = "Crear Libro";
    ViewData["Boton"] = "Crear libro";
    ViewData["Descripcion"] = "Registra los datos del nuevo libro para el inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-11">
            <h2 class="page-title">@ViewData["Title"]</h2>
            <div class="card shadow mb-4">

              <div class="card-body">
                <div class="row">
                  <div class="modal-body p-4">


                      <div class="form-group mb-3">
                        <label for="example-password">Titulo</label>
                        <input type="text" id="nombre_espacio" class="form-control" onchange="" required>
                        <div id="FB_nombre_espacio"></div>
                      </div>

                      <div class="form-group mb-3">
                        <label for="example-password">Descripcion</label>
                        <input type="text" id="nombre_espacio" class="form-control" onchange="" required>
                        <div id="FB_nombre_espacio"></div>
                      </div>

                      <div id="div_area" class="form-group mb-3">
                        <label for="example-password">Fecha lanzamiento</label>
                        <input type="number" id="area" class="form-control" onchange="" required>
                        <div id="FB_area"></div>
                      </div>

                      <div id="div_capacidad" class="form-group mb-3">
                        <label for="example-password">Autor</label>
                        <input type="text" id="capacidad" class="form-control" onchange="" required>
                        <div id="FB_capacidad"></div>
                      </div>

                      <div id="div_capacidad" class="form-group mb-3">
                        <label for="example-password">Precio</label>
                        <input type="number" id="capacidad" class="form-control" onchange="" required>
                        <div id="FB_capacidad"></div>
                      </div>

          
                       <button id="boton_crear" type="button" class="btn mb-2 btn-primary btn-block">
                           <span class="fe mr-2"></span>  @ViewData["Boton"] 
                       </button>
                       <a asp-controller="Libro" asp-action="index" >
                           <button id="regresar" type="button"
                                    class="btn mb-2 btn-light btn-block"><span class="fe mr-2"></span>Regresar</button>
                       </a>
                     </div>
                 </div>
              </div> <!-- / .card -->